version: '3.1'

services:

  broker-service:
    build:
      context: ./../broker-service
      dockerfile: ./../broker-service/broker-service.dockerfile
    restart: always
    ports:
      - "8080:80"
    deploy:
      mode: replicated
      replicas: 1

  search-service:
    build:
      context: ./../search-service
      dockerfile: ./../search-service/search-service.dockerfile
    restart: always
    deploy:
      mode: replicated
      replicas: 1

  med-scraper-service:
    build:
      context: ./../med-scraper-service
      dockerfile: ./../med-scraper-service/med-scraper-service.dockerfile
    restart: always
    deploy:
      mode: replicated
      replicas: 1

  med-api-service:
    build:
      context: ./../med-api-service
      dockerfile: ./../med-api-service/med-api-service.dockerfile
    restart: always
    deploy:
      mode: replicated
      replicas: 1
  
  nlp-service:
    build:
      context: ./../nlp-service
      dockerfile: ./../nlp-service/nlp-service.dockerfile
    restart: always
    deploy:
      mode: replicated
      replicas: 1
        
  mongo: 
    image: mongo
    ports:
      - "27017:27017"
    environment:
      MONGO_INITDB_DATABASE: search
      MONGO_INITDB_ROOT_USERNAME: admin
      MONGO_INITDB_ROOT_PASSWORD: password
    volumes:
      - ./db-data/mongo/:/data/db
